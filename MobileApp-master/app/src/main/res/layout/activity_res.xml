<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.park.myapplication123.ResActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="피자(15000원)"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pizzatextView" />
    

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:inputType="textPersonName"
        android:hint="개수입력"
        android:ems="10"
        android:id="@+id/pizzaeditText" />
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="스파게티(13000원)"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizzaeditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/spagettitextView" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:inputType="textPersonName"
        android:hint="개수입력"
        android:ems="10"
        android:id="@+id/spagettieditText"
         />
</LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="샐러드(9000원)"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/saladtextView"
        android:layout_below="@+id/spagettieditText"
        android:layout_toRightOf="@+id/orderprice2textView"
        android:layout_toEndOf="@+id/orderprice2textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:inputType="textPersonName"
        android:hint="개수입력"
        android:ems="10"
        android:id="@+id/saladeditText"
        android:layout_alignTop="@+id/saladtextView"
        android:layout_alignLeft="@+id/spagettieditText"
        android:layout_alignStart="@+id/spagettieditText" />

</LinearLayout>


    <CheckBox
        android:text="멤버쉽카드있음(10%할인)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_below="@+id/saladeditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="금액계산하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sumbutton"
        android:layout_below="@+id/checkBox"
        android:layout_toRightOf="@+id/ordernum1textView"
        android:layout_toEndOf="@+id/ordernum1textView" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="주문개수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ordernumtextView"
            android:layout_below="@+id/sumbutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:text="0개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ordernum1textView"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="주문금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderpricetextView"
            android:layout_above="@+id/ordernum1textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:text="0원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderprice2textView" />

    </LinearLayout>



</LinearLayout>

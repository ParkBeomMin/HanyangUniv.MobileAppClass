<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_temper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.park.myapplication123.TemperActivity">

    <TextView
        android:text="섭씨온도를 입력하세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/CeltextView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="온도를 입력하세요."
        android:ems="10"
        android:id="@+id/CeleditText" />

    <Button
        android:text="화씨 계산하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FahCalculbutton" />

    <TextView
        android:text="화씨 온도를 입력하세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/FahtextView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
       android:hint="온도를 입력하세요."
        android:id="@+id/FaheditText" />

    <Button
        android:text="섭씨계산"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CelCalculbutton" />
</LinearLayout>

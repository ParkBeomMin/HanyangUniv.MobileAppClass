<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="사과 테이블(비어있음)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1" />

    <Button
        android:text="포도 테이블(비어있음)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b2" />

    <Button
        android:text="키위 테이블(비어있음)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b3" />

    <Button
        android:text="자몽 테이블(비어있음)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b4" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:rowCount="7"
        android:columnCount="3"

        >
        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테이블명" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#447ee2" />
        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입장시간" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#447ee2" />
        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스파게티" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/spaghetti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#447ee2" />
        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피자" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#447ee2" />
        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="멤버쉽카드" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/membership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#447ee2" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f12424" />

        <Button
            android:enabled="false"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 주문" />

        <Button
            android:enabled="false"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보수정" />

        <Button
            android:enabled="false"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화" />
    </GridLayout>
</LinearLayout>